{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",                  // habilita JSX
    "esModuleInterop": true,             // permite import React from 'react'
    "allowSyntheticDefaultImports": true,// importa m√≥dulos CommonJS como default
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["jest", "node"],            // inclui tipos de jest e node
    "resolveJsonModule": true
  },
  "include": ["src", "src/**/*.ts", "src/**/*.tsx", "src/**/*.js"]
}
